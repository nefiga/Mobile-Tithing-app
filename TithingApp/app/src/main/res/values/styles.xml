<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/fab</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="NoteBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:gravity">top|left</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:hint">@string/note_hint</item>
        <item name="android:background">@drawable/note_block</item>
    </style>

    <style name="Footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
